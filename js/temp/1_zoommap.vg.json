{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Share of Energy from Renewable Sources in European Union (EU) (2020)",
  "width": 500,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/lllkl12/FIT3179_Submission/main/asgn2/map_js/europe.json",
    "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
  },
  "params": [
    {
      "name": "zoom_level",
      "value": 600,
      "bind": {
        "input":"range",
        "min":580,
        "max":1000,
        "step": 10,
        "name":"Zoom: "
      }
    },
    {
      "name":"center_to",
      "value": [12.82003, 50.791902]
    }
  ],
  "projection": {
    "type": "equalEarth",
    "center":{"expr": "center_to"},
    "scale":{"expr": "zoom_level"}
  },
  "layer": [
    {
      "transform": [
          {
          "calculate": "datum.properties.NAME + ' not in European Union (EU)'",
          "as": "note"
          }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/lllkl12/FIT3179_Submission/main/asgn2/map_js/ocean.json",
        "format": {"type": "topojson", "feature": "ne_50m_ocean"}
      },
      "mark": {"type": "geoshape", "fill": "#edf8fb"}
    },

    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/lllkl12/FIT3179_Submission/main/asgn2/data/share_of_energy_from_renewable_sources_processed.csv"
            },
            "key": "GEO",
            "fields": ["Value", "TIME"]
          }
        },
        {"filter":"datum.TIME==2020"}
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Value",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [15, 20, 30, 50],
            "range": ["#addd8e", "#78c679", "#41ab5d", "#238443", "#005a32"]
          },
          "legend": {"title": "Percentage"}
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Value", "type": "quantitative", "format":".1f", "title":"Renewable Energy (%)"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/lllkl12/FIT3179_Submission/main/asgn2/map_js/graticules.json",
        "format": {"type": "topojson", "feature": "ne_50m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    }
  ],
  "config": {}
}