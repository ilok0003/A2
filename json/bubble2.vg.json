{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "data": {
        "url": "https://raw.githubusercontent.com/ilok0003/A2/main/data/per-capita-consumption-based-co-emissions-vs-per-capita-energy-consumption-cleaned.csv"
    },
    "width": 700,
    "height": 400,
    "title": {
        "text": "Energy Consumption & CO2 Emissions per Person (2021)",
        "font": "Monospace",
        "fontSize": 24,
        "fontWeight": "bold",
        "anchor": "middle",
        "offset": 10
    },
    "layer": [
        {
            "mark": "circle",
            "encoding": {
                "x": {
                    "field": "Consumption",
                    "type": "quantitative",
                    "title": "Energy Consumption per Person (kWh)",
                    "scale": {
                        "domain": [
                            0,
                            70000
                        ]
                    }
                },
                "y": {
                    "field": "Emissions",
                    "type": "quantitative",
                    "title": "CO2 Emissions per Person (tonnes)",
                    "scale": {
                        "zero": true,
                        "domain": [
                            0,
                            20
                        ]
                    }
                },
                "size": {
                    "field": "Population",
                    "type": "quantitative",
                    "title": "Population",
                    "scale": {
                        "range": [
                            0,
                            2000
                        ]
                    },
                    "legend": {
                        "title": "Population",
                        "format": ".2s",
                        "orient": "right"
                    }
                },
                "color": {
                    "field": "Continent",
                    "type": "nominal",
                    "title": "Continent",
                    "scale": {
                        "domain": [
                            "Africa",
                            "Asia",
                            "Europe",
                            "North America",
                            "South America",
                            "Oceania"
                        ],
                        "range": [
                            "#5AA9E6",
                            "#FFBC42",
                            "#D138BF",
                            "#70AF85",
                            "#D98282",
                            "#907FA4"
                        ]
                    },
                    "legend": {
                        "orient": "right"
                    }
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "Consumption",
                        "type": "quantitative",
                        "title": "Energy consumption per capita (kWh)",
                        "format": ".0f"
                    },
                    {
                        "field": "Emissions",
                        "type": "quantitative",
                        "title": "CO2 emissions per capita (tonnes)",
                        "format": ".1f"
                    },
                    {
                        "field": "Population",
                        "type": "quantitative",
                        "format": ".2s"
                    },
                    {
                        "field": "Continent",
                        "type": "nominal"
                    }
                ],
                "opacity": {
                    "condition": [
                        {
                            "test": {
                                "selection": "continent"
                            },
                            "value": 1
                        }
                    ],
                    "value": 0.2
                }
            },
            "selection": {
                "brush": {
                    "type": "interval",
                    "bind": "scales"
                },
                "continent": {
                    "type": "single",
                    "fields": [
                        "Continent"
                    ],
                    "bind": {
                        "input": "select",
                        "options": [
                            null,
                            "Africa",
                            "Asia",
                            "Europe",
                            "North America",
                            "South America",
                            "Oceania"
                        ],
                        "labels": [
                            "World",
                            "Africa",
                            "Asia",
                            "Europe",
                            "North America",
                            "South America",
                            "Oceania"
                        ],
                        "name": "Select Continent"
                    }
                }
            }
        },
        {
            "transform": [
                {
                    "filter": {
                        "field": "Country",
                        "oneOf": [
                            "China",
                            "India",
                            "United States"
                        ]
                    }
                }
            ],
            "mark": {
                "type": "text",
                "dy": -10,
                "align": "center"
            },
            "encoding": {
                "x": {
                    "field": "Consumption",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Emissions",
                    "type": "quantitative"
                },
                "text": {
                    "field": "Country",
                    "type": "nominal"
                }
            }
        },
        {
            "transform": [
                {
                    "regression": "Consumption",
                    "on": "Emissions",
                    "extent": [
                        -1,
                        30
                    ],
                    "method": "linear"
                }
            ],
            "mark": "line",
            "encoding": {
                "x": {
                    "field": "Consumption",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Emissions",
                    "type": "quantitative"
                },
                "color": {
                    "value": "lightgray"
                }
            }
        }
    ]
}