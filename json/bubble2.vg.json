{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "data": {
        "url": "https://raw.githubusercontent.com/ilok0003/A2/main/data/per-capita-consumption-based-co-emissions-vs-per-capita-energy-consumption-cleaned.csv"
    },
    "width": 800,
    "height": 400,
    "layer": [
        {
            "mark": "circle",
            "encoding": {
                "x": {
                    "field": "Consumption",
                    "type": "quantitative",
                    "title": "Energy consumption per capita (kWh)",
                    "scale": {
                        "domain": [
                            0,
                            70000
                        ]
                    }
                },
                "y": {
                    "field": "Emissions",
                    "type": "quantitative",
                    "title": "Per capita emissions (tonnes CO2)",
                    "scale": {
                        "zero": true,
                        "domain": [
                            0,
                            20
                        ]
                    }
                },
                "size": {
                    "field": "Population",
                    "type": "quantitative",
                    "title": "Population",
                    "scale": {
                        "range": [
                            0,
                            2000
                        ]
                    },
                    "legend": {
                        "title": "Population",
                        "format": ".2s",
                        "orient": "bottom"
                    }
                },
                "color": {
                    "field": "Continent",
                    "type": "nominal",
                    "title": "Continent (click to select)",
                    "scale": {
                        "domain": [
                            "Africa",
                            "Asia",
                            "Europe",
                            "North America",
                            "South America",
                            "Oceania"
                        ],
                        "range": [
                            "#5AA9E6",
                            "#FFBC42",
                            "#D138BF",
                            "#70AF85",
                            "#D98282",
                            "#907FA4"
                        ]
                    },
                    "legend": {
                        "orient": "top"
                    }
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "Consumption",
                        "type": "quantitative",
                        "title": "Energy consumption per capita (kWh)",
                        "format": ".0f"
                    },
                    {
                        "field": "Emissions",
                        "type": "quantitative",
                        "title": "Per capita emissions (tonnes CO2)",
                        "format": ".2f"
                    },
                    {
                        "field": "Population",
                        "type": "quantitative",
                        "format": ".2s"
                    },
                    {
                        "field": "Continent",
                        "type": "nominal"
                    }
                ],
                "opacity": {
                    "condition": {
                        "selection": "continent",
                        "value": 1
                    },
                    "value": 0.2
                }
            },
            "title": "Per capita COâ‚‚ emissions vs. per capita energy consumption (2021)",
            "selection": {
                
                "continent": {
                    "type": "multi",
                    "fields": [
                        "Continent"
                    ],
                    "bind": "legend"
                }
            }
        },
        {
            "transform": [
                {
                    "filter": {
                        "field": "Country",
                        "oneOf": [
                            "China",
                            "India",
                            "United States"
                        ]
                    }
                }
            ],
            "mark": {
                "type": "text",
                "dy": -10,
                "align": "center"
            },
            "encoding": {
                "x": {
                    "field": "Consumption",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Emissions",
                    "type": "quantitative"
                },
                "text": {
                    "field": "Country",
                    "type": "nominal"
                }
            }
        }
    ]
}