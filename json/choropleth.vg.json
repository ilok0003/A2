{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1400,
  "height": 600,
  "title": {
    "text": "Energy consumption per capita (kWh)",
    "fontSize": 16,
    "fontWeight": "bold",
    "anchor": "middle",
    "color": "#333"
  },
  "params": [
    {
      "name": "year_filter",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 1985,
        "max": 2021,
        "step": 1,
        "name": "Select year:"
      }
    },
    {
      "name": "zoom",
      "value": 220,
      "bind": {
        "input": "range",
        "min": 220,
        "max": 800,
        "step": 20,
        "name": "Zoom: "
      }
    },
    {
      "name": "center",
      "value": [
        0,
        0
      ],
      "bind": {
        "input": "select",
        "options": [
          [
            0,
            0
          ],
          [
            -100,
            50
          ],
          [
            -90,
            10
          ],
          [
            -65,
            -20
          ],
          [
            15,
            45
          ],
          [
            15,
            0
          ],
          [
            60,
            30
          ],
          [
            115,
            15
          ],
          [
            130,
            -25
          ]
        ],
        "labels": [
          "World",
          "North America",
          "Central America",
          "South America",
          "Europe",
          "Africa",
          "Middle East Asia",
          "East Asia",
          "Oceania"
        ],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equalEarth",
    "center": {
      "expr": "center"
    },
    "scale": {
      "expr": "zoom"
    }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ilok0003/A2/main/json/ne_110m.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "calculate": "'Data not available for ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ilok0003/A2/main/data/per-capita-energy-use.csv"
      },
      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/ilok0003/A2/main/json/ne_110m.topojson",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {
          "calculate": "datum.Energy_Per_Capita",
          "as": "Energy use per capita"
        },
        {
          "filter": "datum.Year == year_filter"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "Energy use per capita",
          "type": "quantitative",
          "scale": {
            "type": "sequential",
            "domain": [
              0,
              100000
            ],
            "scheme": "yelloworangered"
          },
          "legend": {
            "title": "Energy consumption per capita (kWh)",
            "labelFontSize": 12,
            "orient": "bottom"
          }
        },
        "opacity": {
          "value": 0.6
        },
        "tooltip": [
          {
            "field": "Country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Energy use per capita",
            "type": "quantitative",
            "format": ".0f",
            "title": "Energy consumption per capita (kWh)"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray",
        "strokeWidth": 0.5
      }
    }
  ]
}