{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/ilok0003/A2/main/data/renewable-electricity-per-capita.csv"
    },
    "vconcat": [
      {
        "width": 700,
        "height": 450,
        "layer": [
          {
            "mark": {
              "type": "line",
              "point": {
                "size": 20
              }
            },
            "transform": [
              {
                "filter": {"selection": "year_brush"}
              }
            ],
            "encoding": {
              "x": {
                "field": "Year",
                "type": "ordinal"
              },
              "y": {
                "field": "Renewable electricity per capita (kWh)",
                "type": "quantitative"
              },
              "color": {
                "field": "Entity",
                "type": "nominal",
                "title": "Continent (click to select)",
                "scale": {
                  "domain": ["Africa", "Asia", "Europe", "North America", "South America", "Oceania"],
                  "range": ["#5AA9E6", "#FFBC42", "#D138BF", "#70AF85", "#D98282", "#907FA4"]
                },
                "legend": {
                  "orient": "top"
                }
              },
              "detail": {
                "field": "Entity",
                "type": "nominal"
              }
            }
          },
          {
            "mark": "rule",
            "data": {
              "values": [
                {
                  "event": "Paris Agreement",
                  "year": "2015"
                }
              ]
            },
            "encoding": {
              "x": {
                "field": "year",
                "type": "ordinal"
              },
              "color": {
                "value": "black"
              },
              "size": {
                "value": 2
              }
            }
          }
        ]
      },
      {
        "width": 700,
        "height": 50,
        "mark": "bar",
        "selection": {
          "year_brush": {
            "type": "interval",
            "encodings": ["x"]
          }
        },
        "encoding": {
          "x": {
            "field": "Year",
            "type": "ordinal"
          },
          "y": {
            "aggregate": "count",
            "type": "quantitative",
            "axis": {"title": ""}
          }
        }
      }
    ]
  }
  